{
  "name": "charts-a11y-plugin",
  "version": "1.0.1",
  "description": "WCAG 2.1 AA keyboard navigation and accessibility plugin for Apache ECharts",
  "main": "dist/echarts-a11y-plugin.umd.js",
  "files": [
    "dist/",
    "src/locales/",
    "README.md"
  ],
  "scripts": {
    "clean":      "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "build":      "npm run clean && webpack --config webpack.config.js",
    "build:watch":"webpack --config webpack.config.js --watch",
    "test":       "node smoke-test.js",
    "test:full":  "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "echarts",
    "accessibility",
    "a11y",
    "wcag",
    "keyboard",
    "screen-reader",
    "aria"
  ],
  "license": "LGPL-3.0-or-later",
  "peerDependencies": {
    "echarts": ">=5.0.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "jsdom": "^25.0.0",
    "webpack": "^5.99.0",
    "webpack-cli": "^6.0.0"
  }
}
